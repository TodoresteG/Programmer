
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Programmer.Services.Dtos.Academy
@model AcademyAllCoursesDto

<div class="container-fluid">
    <section class="page-section row">
        <div class="col-12">
            <h1 class="text-center">Welcome to Online Academy 'Programmer'</h1>
            <p class="text-center lead">Some info about academy. More like an ad. You can copy from SoftUni</p>
        </div>


        <div class="col-4">
            <h3>All Courses</h3>
            @foreach (var course in Model.AllCourses)
            {
                @if (!course.IsCompleted && course.Name != "C# Fundamentals")
                {
                    <p><a class="btn disabled" href="/Courses/Enroll?id=@course.Id">@course.Name  - @course.Price $</a></p>
                }
                else
                {
                    <p><a href="/Courses/Enroll?id=@course.Id">@course.Name  - @course.Price $</a></p>
                }
            }

        </div>

        <div class="col-4">
            <h3>Enrolled courses</h3>
            @foreach (var course in Model.EnrolledCourses)
            {
                <p class="lead">@course.Name</p>
            }
        </div>

        <div class="col-4">
            <h3>Completed courses</h3>

            @foreach (var course in Model.CompletedCourses)
            {
                <p class="lead">@course.Name</p>
            }
        </div>

    </section>
</div>
